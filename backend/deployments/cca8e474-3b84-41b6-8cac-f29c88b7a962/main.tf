  description = "The public DNS name of the EC2 server."
  value       = aws_instance.ec2_server.public_dns
}

output "ec2_private_key_path" {
  description = "Path to the generated SSH private key file. Keep this file secure."
  value       = local_file.ec2_private_key.filename
  sensitive   = true
}

output "rds_db_instance_endpoint" {
  description = "The endpoint address of the RDS PostgreSQL database instance."

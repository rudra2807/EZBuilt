# Terraform code generated by EZBuilt

# main.tf
terraform {
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
    tls = {
      source  = "hashicorp/tls"
      version = "~> 4.0"
    }
    local = {
      source  = "hashicorp/local"
      version = "~> 2.0"
    }
  }
}

provider "aws" {
  region = var.region
}

# Data source for AWS Availability Zones in the specified region
data "aws_availability_zones" "available" {
  state = "available"
}

# Data source for the latest Amazon Linux 2023 AMI
data "aws_ami" "amazon_linux_2023" {
  most_recent = true
  owners      = ["amazon"]

  filter {
    name   = "name"
    values = ["al2023-ami-*-x86_64"]
  }

  filter {
    name   = "virtualization-type"
    values = ["hvm"]
  }

  filter {
    name   = "architecture"
    values = ["x86_64"]
  }
}

#--------------------------------------------------------------
# Networking: Dedicated VPC with Public and Private Subnets
#
# Based on networking_pattern: "dedicated_vpc_public_private"
# and advanced_constraints.networking_hints:
# "wants_custom_vpc": true, "wants_public_and_private_subnets": true
#--------------------------------------------------------------

resource "aws_vpc" "main" {
  cidr_block = "10.0.0.0/16"
  enable_dns_hostnames = true
  enable_dns_support   = true

  tags = {
    Name        = "${var.project_name}-vpc"
    Project     = var.project_name
    ManagedBy   = "EZBuilt"
    Environment = var.environment
  }
}

resource "aws_internet_gateway" "main" {
  vpc_id = aws_vpc.main.id

  tags = {
    Name        = "${var.project_name}-igw"
    Project     = var.project_name
    ManagedBy   = "EZBuilt"
    Environment = var.environment
  }
}

# Create two public subnets across two availability zones
resource "aws_subnet" "public" {
  count             = 2 # Assuming 2 AZs for redundancy
  vpc_id            = aws_vpc.main.id
  cidr_block        = "10.0.${count}.0/24"
  availability_zone = data.aws_availability_zones.available.names[count]
  map_public_ip_on_launch = true # EC2 instances in public subnets get public IPs

  tags = {
    Name        = "${var.project_name}-public-subnet-${count + 1}"
    Project     = var.project_name
    ManagedBy   = "EZBuilt"
    Environment = var.environment
  }
}

# Create two private subnets across two availability zones
resource "aws_subnet" "private" {
  count             = 2 # Assuming 2 AZs for redundancy
  vpc_id            = aws_vpc.main.id
  cidr_block        = "10.0.${count + 100}.0/24" # Different CIDR range for private
  availability_zone = data.aws_availability_zones.available.names[count]

  tags = {
    Name        = "${var.project_name}-private-subnet-${count + 1}"
    Project     = var.project_name
    ManagedBy   = "EZBuilt"
    Environment = var.environment
  }
}

# Elastic IP for NAT Gateway (one EIP per NAT Gateway for redundancy)
# Even though needs_static_ip is false for the project, NAT gateways require an EIP.
resource "aws_eip" "nat" {
  count = 2 # One EIP for each NAT Gateway
  vpc   = true

  tags = {
    Name        = "${var.project_name}-nat-eip-${count + 1}"
    Project     = var.project_name
    ManagedBy   = "EZBuilt"
    Environment = var.environment
  }
}

# NAT Gateway for private subnets to access the internet
resource "aws_nat_gateway" "main" {
  count         = 2 # One NAT Gateway per public subnet for redundancy
  allocation_id = aws_eip.nat[count].id
  subnet_id     = aws_subnet.public[count].id

  tags = {
    Name        = "${var.project_name}-nat-gateway-${count + 1}"
    Project     = var.project_name
    ManagedBy   = "EZBuilt"
    Environment = var.environment
  }
}

# Route table for public subnets (direct internet access)
resource "aws_route_table" "public" {
  vpc_id = aws_vpc.main.id

  route {
    cidr_block = "0.0.0.0/0"
    gateway_id = aws_internet_gateway.main.id
  }

  tags = {
    Name        = "${var.project_name}-public-rt"
    Project     = var.project_name
    ManagedBy   = "EZBuilt"
    Environment = var.environment
  }
}

# Route table for private subnets (internet access via NAT Gateway)
resource "aws_route_table" "private" {
  count  = 2 # One private route table per NAT Gateway for redundancy
  vpc_id = aws_vpc.main.id

  route {
    cidr_block     = "0.0.0.0/0"
    nat_gateway_id = aws_nat_gateway.main[count].id
  }

  tags = {
    Name        = "${var.project_name}-private-rt-${count + 1}"
    Project     = var.project_name
    ManagedBy   = "EZBuilt"
    Environment = var.environment
  }
}

# Associate public subnets with the public route table
resource "aws_route_table_association" "public" {
  count          = length(aws_subnet.public)
  subnet_id      = aws_subnet.public[count].id
  route_table_id = aws_route_table.public.id
}

# Associate private subnets with their respective private route tables
resource "aws_route_table_association" "private" {
  count          = length(aws_subnet.private)
  subnet_id      = aws_subnet.private[count].id
  route_table_id = aws_route_table.private[count].id
}

#--------------------------------------------------------------
# Security Groups
# Based on high_level_requirements.security_level: "medium"
#--------------------------------------------------------------

# Security Group for the EC2 Server
resource "aws_security_group" "ec2_server_sg" {
  name        = "${var.project_name}-ec2-server-sg"
  description = "Allow inbound SSH and HTTP/HTTPS traffic to EC2 server"
  vpc_id      = aws_vpc.main.id

  # Inbound SSH access
  ingress {
    description = "SSH from allowed CIDR"
    from_port   = 22
    to_port     = 22
    protocol    = "tcp"
    cidr_blocks = [var.allowed_ssh_cidr]
  }

  # Inbound HTTP access (assuming for publicly_accessible EC2)
  # Based on components[0].publicly_accessible: true and type: "other",
  # assuming it might serve a web application.
  ingress {
    description = "HTTP from anywhere"
    from_port   = 80
    to_port     = 80
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  # Inbound HTTPS access (assuming for publicly_accessible EC2)
  ingress {
    description = "HTTPS from anywhere"
    from_port   = 443
    to_port     = 443
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  # Outbound access (allow all by default for simplicity, medium security)
  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }

  tags = {
    Name        = "${var.project_name}-ec2-server-sg"
    Project     = var.project_name
    ManagedBy   = "EZBuilt"
    Environment = var.environment
  }
}

# Security Group for the RDS Database
resource "aws_security_group" "db_instance_sg" {
  name        = "${var.project_name}-db-instance-sg"
  description = "Allow inbound PostgreSQL traffic from EC2 server security group"
  vpc_id      = aws_vpc.main.id

  # Inbound PostgreSQL access from the EC2 server's security group
  # Based on components[1].publicly_accessible: false and components[1].depends_on: []
  # and components[0].depends_on: ["db-instance"]
  # The EC2 server needs to connect to the DB.
  ingress {
    description     = "PostgreSQL from EC2 server"
    from_port       = 5432 # Default PostgreSQL port
    to_port         = 5432
    protocol        = "tcp"
    security_groups = [aws_security_group.ec2_server_sg.id]
  }

  # Outbound access (allow all by default for simplicity)
  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }

  tags = {
    Name        = "${var.project_name}-db-instance-sg"
    Project     = var.project_name
    ManagedBy   = "EZBuilt"
    Environment = var.environment
  }
}

#--------------------------------------------------------------
# Compute: EC2 Server
#
# Based on architecture_preferences.compute_model: "instances",
# components[0].name: "ec2-server", type: "other", publicly_accessible: true,
# explicit_services: ["ec2"], compute_hints.instance_type_hint: "t3.micro"
#--------------------------------------------------------------

# Generate a new SSH key pair for EC2
resource "tls_private_key" "ec2_ssh_key" {
  algorithm = "RSA"
  rsa_bits  = 4096
}

resource "aws_key_pair" "ec2_key_pair" {
  key_name   = "${var.project_name}-ec2-key"
  public_key = tls_private_key.ec2_ssh_key.public_key_openssh

  tags = {
    Project     = var.project_name
    ManagedBy   = "EZBuilt"
    Environment = var.environment
  }
}

# Save the private key to a local file
resource "local_file" "ec2_private_key" {
  content  = tls_private_key.ec2_ssh_key.private_key_pem
  filename = "${path.module}/${var.project_name}-ec2-key.pem"
  # Set permissions to read-only for the owner
  file_permission = "0600"
}

resource "aws_instance" "ec2_server" {
  ami                         = data.aws_ami.amazon_linux_2023.id
  instance_type               = var.ec2_instance_type # Using t3.micro from compute_hints
  key_name                    = aws_key_pair.ec2_key_pair.key_name
  subnet_id                   = aws_subnet.public[0].id # Place in a public subnet
  vpc_security_group_ids      = [aws_security_group.ec2_server_sg.id]
  associate_public_ip_address = true

  # User data to install a basic web server (e.g., Apache) for demonstration
  # given 'publicly_accessible: true' and 'type: other'
  user_data = <<-EOF
              #!/bin/bash
              sudo yum update -y
              sudo yum install -y httpd php postgresql-client
              sudo systemctl start httpd
              sudo systemctl enable httpd
              echo "<h1>Hello from EC2 server in ${var.project_name}!</h1>" | sudo tee /var/www/html/index.html
              EOF

  tags = {
    Name        = "${var.project_name}-ec2-server"
    Project     = var.project_name
    ManagedBy   = "EZBuilt"
    Environment = var.environment
  }
  # Explicit dependency on the database instance for clarity as per component.depends_on
  depends_on = [aws_db_instance.db_instance]
}

#--------------------------------------------------------------
# Database: RDS Instance
#
# Based on architecture_preferences.database_preference: "not_sure",
# components[1].name: "db-instance", type: "database", publicly_accessible: false,
# stateful: true, explicit_services: ["rds"]
#
# Assumption: Defaulting to PostgreSQL for relational database when not specified.
#--------------------------------------------------------------

resource "aws_db_subnet_group" "db_subnet_group" {
  name       = "${var.project_name}-db-subnet-group"
  subnet_ids = [aws_subnet.private[0].id, aws_subnet.private[1].id] # Place in private subnets

  tags = {
    Name        = "${var.project_name}-db-subnet-group"
    Project     = var.project_name
    ManagedBy   = "EZBuilt"
    Environment = var.environment
  }
}

resource "aws_db_instance" "db_instance" {
  allocated_storage    = 20
  storage_type         = "gp2"
  engine               = "postgres" # Assumption: PostgreSQL for "not_sure" database_preference
  engine_version       = "15.5"     # A recent stable PostgreSQL version
  instance_class       = "db.t3.micro"
  identifier           = "${var.project_name}-db-instance"
  db_name              = "${replace(var.project_name, "-", "_")}_db" # Database name, replacing hyphens
  username             = var.db_master_username
  password             = var.db_master_password
  parameter_group_name = "default.postgres15"
  skip_final_snapshot  = true # For demo/dev environments; set to false for production
  publicly_accessible  = false # Components[1].publicly_accessible: false
  db_subnet_group_name = aws_db_subnet_group.db_subnet_group.name
  vpc_security_group_ids = [aws_security_group.db_instance_sg.id]

  # As per security_level: "medium", preferring single AZ unless multi_az is explicitly hinted.
  # For production, Multi-AZ is recommended.

  tags = {
    Name        = "${var.project_name}-db-instance"
    Project     = var.project_name
    ManagedBy   = "EZBuilt"
    Environment = var.environment
  }
}

# variables.tf
variable "project_name" {
  description = "Name of the project, used for resource naming and tagging."
  type        = string
  default     = "vpc-ec2-db-project"
}

variable "region" {
  description = "AWS region for deployment."
  type        = string
  default     = "us-east-1"
}

variable "environment" {
  description = "The deployment environment (e.g., dev, test, prod)."
  type        = string
  default     = "demo"
}

variable "allowed_ssh_cidr" {
  description = "CIDR block allowed to SSH into the EC2 instance. WARNING: '0.0.0.0/0' is insecure for production environments."
  type        = string
  default     = "0.0.0.0/0"
}

variable "ec2_instance_type" {
  description = "The EC2 instance type for the server component."
  type        = string
  default     = "t3.micro" # From compute_hints.instance_type_hint
}

variable "db_master_username" {
  description = "Master username for the RDS PostgreSQL database."
  type        = string
  default     = "dbadmin"
}

variable "db_master_password" {
  description = "Master password for the RDS PostgreSQL database. Consider using AWS Secrets Manager in production."
  type        = string
  sensitive   = true
}


# outputs.tf
output "vpc_id" {
  description = "The ID of the created VPC."
  value       = aws_vpc.main.id
}

output "public_subnet_ids" {
  description = "A list of public subnet IDs."
  value       = [for s in aws_subnet.public : s.id]
}

output "private_subnet_ids" {
  description = "A list of private subnet IDs."
  value       = [for s in aws_subnet.private : s.id]
}

output "ec2_server_public_ip" {
